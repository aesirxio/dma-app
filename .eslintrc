{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": "error",
        "react/display-name": "warn",
        "react/prop-types": "warn",
        "react/jsx-key": "warn",
        "no-unsafe-optional-chaining": "warn",
        "react/no-deprecated": "warn",
        "react/no-children-prop": "warn",
        "no-case-declarations": "warn"
    },
    "settings": {
        "react": {
            "version": "17.0.2"
        }
    },
    "parser": "@babel/eslint-parser",
    "ignorePatterns": [
        "*.json",
        "*.scss",
        "*.svg",
        "*.woff",
        "*.woff2",
        "*.ttf",
        "*.otf",
        "*.eot",
        "*.png"
    ]
}